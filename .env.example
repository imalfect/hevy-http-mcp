# Hevy API key — get one at https://hevy.com/settings?developer (requires Hevy Pro)
HEVY_API_KEY=your_hevy_api_key_here

# API key clients must send to access this MCP server (choose any secure random string)
MCP_API_KEY=your_mcp_access_key_here

# Server port (optional, default: 3000)
# PORT=3000

# Hostname to bind to (optional, default: 0.0.0.0 — listens on all interfaces)
# HOST=0.0.0.0

# Log level: debug | info | warn | error (optional, default: info)
# LOG_LEVEL=info
